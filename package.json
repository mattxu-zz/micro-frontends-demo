{
  "name": "micro-frontends-in-action-code",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "01_routing": "concurrently --names \"nginx  ,decide ,inspire\" \"node nginx.js 01_routing/webserver/nginx.conf\" \"mfserve --listen 3001 01_routing/team-decide\" \"mfserve --listen 3002 01_routing/team-inspire\" \"wait-on http://localhost:3000/product/porsche && opener http://localhost:3000/product/porsche\"",
    "02_iframe": "concurrently --names \"decide ,inspire\" \"mfserve --listen 3001 02_iframe/team-decide\" \"mfserve --listen 3002 02_iframe/team-inspire\" \"wait-on http://localhost:3001/product/porsche && opener http://localhost:3001/product/porsche\"",
    "03_ssi": "concurrently --names \"nginx  ,decide ,inspire\" \"node nginx.js 03_ssi/webserver/nginx.conf\" \"mfserve --listen 3001 03_ssi/team-decide\" \"mfserve --listen 3002 03_ssi/team-inspire\" \"wait-on http://localhost:3000/product/porsche && opener http://localhost:3000/product/porsche\"",
    "04_web_components": "concurrently --names \"decide  ,inspire ,checkout\" \"mfserve --listen 3001 04_web_components/team-decide\" \"mfserve --listen 3002 04_web_components/team-inspire\" \"mfserve --listen 3003 04_web_components/team-checkout\" \"wait-on http://localhost:3001/product/fendt && opener http://localhost:3001/product/fendt\"",
    "05_single_spa": "concurrently --names \"app-shell,decide   ,inspire  ,checkout \" \"mfserve --listen 3000 --single 05_single_spa/app-shell\" \"mfserve --listen 3001 --cors 05_single_spa/team-decide\" \"mfserve --listen 3002 --cors 05_single_spa/team-inspire\" \"mfserve --listen 3003 --cors 05_single_spa/team-checkout\" \"wait-on http://localhost:3000 && opener http://localhost:3000\""
  },
  "license": "ISC",
  "dependencies": { 
    "@microfrontends/serve": "^11.3.0",
    "concurrently": "^6.0.2",
    "opener": "^1.5.2",
    "wait-on": "^5.3.0"
  }
}
